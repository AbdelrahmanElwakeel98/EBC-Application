<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/img_splash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ebc_burned"
        />

    <TextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font_headlines"
        android:text="Engineers Bridge Competition"
        android:layout_below="@id/img_splash"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="#F48325" />

    <TextView
        android:id="@+id/txt1_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/font_headlines"
        android:layout_below="@id/txt_splash"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:textColor="#34B6EC" />

</RelativeLayout>